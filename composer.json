{
    "name": "camoo/config",
    "type": "library",
    "description": "Lightweight configuration file loader that supports PHP, INI, XML, JSON, and YAML files",
    "keywords": ["configuration", "config", "json", "yaml", "yml", "ini", "xml", "unframework", "microphp"],
    "homepage": "http://hassankhan.me/config/",
    "license": "MIT",
    "authors": [
        {
            "name": "Hassan Khan",
            "role": "Developer",
            "homepage": "http://hassankhan.me/"
        },
        {
            "name": "Camoo Sarl",
            "role": "Company",
            "email": "config@camoo.sarl",
            "homepage": "https://www.camoo.cm/"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-simplexml": "*",
        "ext-dom": "*",
        "ext-libxml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "symfony/yaml": "^6.3"
    },
    "suggest": {
        "symfony/yaml": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "Camoo\\Config\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Camoo\\Config\\Test\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    }
}
